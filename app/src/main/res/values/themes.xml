<resources>

    <style name="Theme1.NeedlemanWunschAlgorithmVisualizer"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="base_slot_1">@color/theme_1_base_slot_1</item>
        <item name="support_slot_1">@color/theme_1_support_slot_1</item>
        <item name="support_slot_2">@color/theme_1_support_slot_2</item>
        <item name="highlight_slot_1">@color/theme_1_highlight_slot_1</item>
        <item name="android:statusBarColor">?attr/base_slot_1</item>
        <item name="android:navigationBarColor">?attr/base_slot_1</item>
    </style>

    <style name="ChangeOptionValueDialogStyle"
        parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/support_slot_1</item>
        <item name="android:textColorPrimary">?attr/support_slot_1</item>
        <item name="android:background">?attr/base_slot_1</item>
    </style>

    <style name="ChangeOptionValueNumberPickerStyle"
        parent="Theme1.NeedlemanWunschAlgorithmVisualizer">
        <item name="android:textColorPrimary">?attr/support_slot_1</item>
